{% extends '/admin/base.html.twig' %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">

            <!--***************************start**********************
      *******************************************************-->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste Produit</h4>
                            <div class="mb-4">
                                <a href="/ajoutproduit" class="btn btn-outline-success btn-rounded fs-16">+ Nouveau produit</a>

                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example3" class="display" style="min-width: 845px">
                                    <thead>
                                    <tr>
                                        <th>nom produit</th>
                                        <th>taille produit</th>
                                        <th>Categorie</th>
                                        <th>Qauntite produit</th>
                                        <th>image</th>

                                        

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for produit in b %}
                                    <tr>
                                        <td>{{ produit.nomProduit }}</td>
                                        <td>{{ produit.tailleProduit }}</td>
                                        <td>{{ produit.getCategory.getTitre }}</td>
                                        <td>{{ produit.Qauntiteproduit }}</td>
                                        <td><img class="rounded-circle" width="60" src="http://localhost/Images/Produits/{{ produit.getImage() }}" alt=""></td>
                                        <td>
                                            <div class="d-flex">
                                                <a href="{{ path('modifierproduit',{'id':produit.idproduit}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                <a href="{{ path('supprimerproduit',{'id':produit.idproduit}) }}" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                            </div>
                                        
                                        <td>
                                            <div class="d-flex">
                                                
                                            </div>
                                        </td>
                                        {% endfor %}
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--******************************************************
        *******************************end*********************-->
    </div>
    </div>
{% endblock %}
