{% extends '/admin/base.html.twig' %}

{% block body %}
    <title>Delete Article</title>
    <div class="content-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Delete Article</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-form">
                                <form method="post" action="{{ path('app_article_delete', {'idarticle': article.idarticle}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.idarticle) }}">
                                    <div class="mb-3">
                                        <p>Are you sure you want to delete this article?</p>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
